{
  "manifest_version": 3,
  "name": "YT Layout Purge",
  "version": "1.1.0",
  "description": "I hate the new YouTubeâ„¢ layout, so I cleaned it up.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "yt-sanitizer@local",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
